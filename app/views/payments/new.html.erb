<h1>Make Payments#</h1>

<%= form_tag payments_path do %>
 <table style="width: 100%;border: 1px solid">
    <tr>
        <th>Total Amount</th>
        <th>Credit Card Type</th>
        <th>Credit Card No</th>
        <th>Card Owner Name</th>
        <th>Card Expiry Date</th>
        <th>CSV number</th>
    </tr>
    <tr>
        <td style="text-align: center"><%= @order.total_amount %></td>
        <td style="text-align: center"><%= text_field_tag "card_type" %></td>
        <td style="text-align: center"><%= text_field_tag "card_no" %></td>
        <td style="text-align: center"><%= text_field_tag "card_owner_name" %></td>
        <td style="text-align: center"><%= text_field_tag "card_expiry_date" %></td>
        <td style="text-align: center"><%= text_field_tag "csv_no" %></td>
    </tr>
    <tr>
        <td colspan="6">
            <%= submit_tag "Pay" %>
        </td>
    </tr>
</table>
 
<% end %>
